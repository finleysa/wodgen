extends ../shared/template
block content
  .row
    .small-12.columns
      #container
        #header.spaceVertical
          .row
            .small-6.columns
              label.push.headLabel.spaceVertical.pad Welcome to WodGen
            .small-6.columns
              p.explanation.spaceVertical.pad You may browse the <span><a href='/wods'>Wod database</a></span> without creating a login! If you wish to track your progress by logging your workout details then go ahead and sign up!

        if fail
          .space.data-alert.alert-box.warning.radius= fail
        .row
          .small-12.small-centerd.columns#tabWrap
            dl(class="tabs vertical", data-tab)
              dd(class="active"): a(href="#panel1a") SIGN UP
              dd: a(href="#panel2a") LOGIN
            div(class="tabs-content vertical")
              div(class="content active", id="panel1a")
                form(action='/register', method='post', enctype='multipart/form-data')
                  fieldset
                    legend Register
                    .row
                      .small-12.columns
                        label Name
                        input(name='name', type='text', autofocus=true, required)
                      .small-12.columns
                        label Email
                        input(name='email', type='email', required)
                    .row
                      .small-12.columns
                        label Password
                        input(name='password', type='password', required)
                    .row
                      .small-12.columns
                        label Profile Photo
                        input(name='cover', type='file', required)
                    .row
                      .small-12.columns
                        button.small.radius Register
              div(class="content", id="panel2a")
                form#loginTabForm(action='/login', method='post')
                  fieldset
                    legend Login
                    .row
                      .small-12.columns
                        label Email
                        input(name='email', type='text', required)
                    .row
                      .small-12.columns
                        label Password
                        input(name='password', type='password', required)
                    .row
                      .small-12.columns
                      button.small.radius.alert Login
//
  #bottom
    .row
      .small-6.columns
        .space
        div &nbsp;
        a(href='http://www.google.com') Find a Solution to your problem here
        .space
      .small-6.columns
        .space
        <a href="#">steve.a.finley@gmail.com</a>
        a(href='/wods') Wod Database
        div &nbsp;
        a(href='/logout') Logout
        div &nbsp;
        .space


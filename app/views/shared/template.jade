doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href="/") The Title
        li.toggle-topbar.menu-icon
          a(href="#") Menu

      section.top-bar-section
        ul.left
        ul.right
          if user
            li: h5.white Welcome, #{user.name}!
            li.divider
          li: a(href="/") Home
          li.divider
          li.has-form.has-dropdown.not-click
            a(href='#') Menu
            ul.dropdown
              li: a(href="/items") Items
              li: a(href="/users/show") Profile
              if !user
                li: a(href="#" data-reveal-id="login") Login
                li: a(href="#" data-reveal-id="register") Register
              if user
                li.has-form
                  form(action='/logout', method='post')
                    button#logout.tiny.radius.alert Logout
          li: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    .row
      .small-12.columns
        div#register.createItemForm.reveal-modal.tiny(data-reveal)
          .row
            .small-12.columns
              form(action='/register', method='post', enctype='multipart/form-data')
                label.left Name
                input(name='name', type='text', autofocus=true, required)
                label.left Email
                input(name='email', type='email', required)
                label.left Password
                input(name='password', type='password', required)
                button.radius.close-reveal-model Create
          a.close-reveal-modal &#215; 
    .row
      .small-12.columns
        div#login.createItemForm.reveal-modal.tiny(data-reveal)
          .row
            .small-12.columns
              form(action='/login', method='post', enctype='multipart/form-data')
                label.left Email
                input(name='email', type='email', required)
                label.left Password
                input(name='password', type='password', required)
                button.radius.close-reveal-model Create
          a.close-reveal-modal &#215; 

        block content
    
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

